@{
}

<form method="post">
    <h1>Login Form</h1>

    <div>
        <label>Username: </label>
        <input type="text" name="Username" />
    </div>

    <div>
        <label>Password: </label>
        <input type="text" name="Password" />
    </div>

    @if (ViewBag.Error != null)
    {
        <div style="color: red">@ViewBag.Error</div>
	}

    <div>
		<button type="submit">Login</button>
    </div>
</form>
